{
    "extends": ["tslint:recommended"],
    "rules": {
      "member-access": [true, "check-accessor"],
      "no-floating-promises": true,
      "no-unused-declaration": true,
      "prefer-const": true,
      "trailing-comma": [ false ],
      "triple-equals": [true, "allow-null-check", "allow-undefined-check"]
    }
  }